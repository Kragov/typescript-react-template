{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"sourceMap": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"lib": ["ES6", "DOM"],
		"typeRoots": ["node_modules/@types", "utils/@types"],
		"paths": {
			"src/*": ["src/*"],
			"@components/*": ["src/components/*"]
		}
	},
	"exclude": ["node_modules"]
}
